<UserControl x:Class="UC.Capture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UC"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="280">
    <Grid>
        <Grid x:Name="Cap" Height="50" VerticalAlignment="Top"/>
        <Label Content="Enter Capture:" Margin="0, 50, 0, 0" VerticalAlignment="Top"/>
        <TextBox x:Name="Input" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                 Height="25" VerticalContentAlignment="Center" Margin="0, 75, 0, 0"
                 KeyUp="Enter"/>
    </Grid>
</UserControl>
