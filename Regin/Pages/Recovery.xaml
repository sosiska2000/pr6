<Page x:Class="Regin.Pages.Recovery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Regin.Pages"
        xmlns:uc="clr-namespace:UC;assembly=UC"
  mc:Ignorable="d"
  d:DesignHeight="450"
  d:DesignWidth="800"
  Title="Login"
  TextElement.Foreground="{DynamicResource MaterialDesignBody}"
  TextElement.FontWeight="Regular"
  TextElement.FontSize="13"
  TextOptions.TextFormattingMode="Ideal"
  TextOptions.TextRenderingMode="Auto"
  Background="{DynamicResource MaterialDesignPaper}"
  FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <materialDesign:Card Height="400"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Width="300">
            <Grid>
                <Image x:Name="IUser"
                   HorizontalAlignment="Center"
                   Height="100"
                   Margin="32"
                   VerticalAlignment="Top"
                   Width="100"
                   Source="/Images/ic-user.jpg">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="50"
                                     RadiusY="50"
                                     Center="50,50"/>
                    </Image.Clip>
                </Image>

                <Label x:Name="LNameUser"
                   Margin="10,127,10,0"
                   HorizontalContentAlignment="Center"
                   Content=""
                   VerticalAlignment="Top"/>

                <Label Content="Enter Login:"
                   Margin="10,161,10,0"
                   VerticalAlignment="Top"/>

                <TextBox x:Name="TbLogin"
                     Height="23"
                     Margin="10,185,10,0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Top"
                     KeyUp="SetLogin"
                     LostFocus="SetLogin"/>

                <uc:Capture x:Name="Captur"
                                HorizontalAlignment="Center"
                                Width="280"
                                Margin="10,213,10,0"
                                Height="100"
                                VerticalAlignment="Top"/>

                <Button Content="Send code" 
                        VerticalAlignment="Bottom" 
                        Margin="10, 0, 10, 35"
                        Click="Button_Click"/>

                <Label Content="Use pincode"
                   Margin="0,373,10,0"
                   VerticalAlignment="Top"
                   Foreground="#FF73C700"
                   FontSize="10"
                   MouseDown="OpenPin"
                   HorizontalAlignment="Right"
                   Width="62"/>

                <Label Content="Back"
Margin="10,0 ,10,5"
VerticalAlignment="Bottom"
Foreground="#FF73C700"
FontSize="10"
MouseDown="OpenLogin"
HorizontalAlignment="Left"
Width="62"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
